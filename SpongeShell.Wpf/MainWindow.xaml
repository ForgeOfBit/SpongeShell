<Window x:Class="SpongeShell.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpongeShell.Wpf"
        mc:Ignorable="d"
        Title="SpongeShell" Height="500" Width="800" MinWidth="640" MinHeight="400"
        Background="#0C0C0C" Activated="Window_Activated">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#1E1E1E" Padding="12,8" BorderBrush="#3C3C3C" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="SpongeShell" FontSize="14" Foreground="#CCCCCC" FontWeight="SemiBold" Margin="0,0,12,0"/>
                <TextBlock x:Name="ShellStatusText" Text="Shell başlatılıyor..." Foreground="#808080" FontSize="12" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        <ScrollViewer x:Name="TerminalScroll" Grid.Row="1" Padding="16,12" 
                      VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                      Background="Transparent">
            <Grid>
                <TextBox x:Name="TerminalOutput" IsReadOnly="True" AcceptsReturn="True" TextWrapping="NoWrap"
                         FontFamily="Consolas" FontSize="14" Foreground="#CCCCCC" Background="#0C0C0C"
                         BorderThickness="0" Padding="0" MinWidth="600" MinHeight="300"/>
                <!-- Görünmez giriş kutusu: tüm klavye girişi burada, üste yerleşik -->
                <TextBox x:Name="InputOverlay" AcceptsReturn="True" TextWrapping="NoWrap"
                         Background="Transparent" Foreground="Transparent" CaretBrush="Transparent"
                         BorderThickness="0" Padding="0" MinWidth="600" MinHeight="300"
                         VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                         KeyDown="InputOverlay_KeyDown" PreviewTextInput="InputOverlay_PreviewTextInput"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
